    {
      "type": 9,
      "content": {
        "version": "KqlParameterItem/1.0",
        "parameters": [
          {
            "id": "ad1dcea9-03e0-4fcb-a27f-0f7af0a17da2",
            "version": "KqlParameterItem/1.0",
            "name": "TimeRange2",
            "label": "TimeRange",
            "type": 4,
